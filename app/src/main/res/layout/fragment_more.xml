<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="fammilys"
            type="String" />

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.more.MoreFragment"
            android:paddingStart="22dp"
            android:paddingEnd="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_txt_text0"
                android:textSize="24sp"
                android:layout_marginTop="20dp"
                android:text="더보기"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/my_txt_familly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/my_txt_text0"
                app:layout_constraintStart_toStartOf="@id/my_txt_text0"
                android:text="가족"
                android:textSize="13sp"
                android:textColor="@color/text3" />

            <TextView
                android:id="@+id/my_txt_fammilys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@={fammilys}"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/my_txt_familly"
                app:layout_constraintStart_toStartOf="@+id/my_txt_familly"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/my_txt_fammilys"
                app:layout_constraintStart_toStartOf="parent">


                <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/bar2"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:foreground="@drawable/gray_hr" />


                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/my_txt_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정설정"
                    android:textSize="13sp"
                    android:textColor="@color/text3" />

                <TextView
                    android:id="@+id/my_txt_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="회원 정보 수정" />

                <TextView
                    android:id="@+id/my_txt_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="비밀번호 변경" />
                <TextView
                    android:id="@+id/my_txt_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가족 코드 연결"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/my_txt_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:layout_marginTop="20dp" />

                <View
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/bar3"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:foreground="@drawable/gray_hr" />

                <TextView
                    android:id="@+id/my_txt_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/text3"
                    android:text="고객센터"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/my_txt_noti2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="공지사항" />

                <TextView
                    android:id="@+id/my_txt_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="고객센터" />

                <TextView
                    android:id="@+id/my_txt_cuVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="현재 버전 0.0.1" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>